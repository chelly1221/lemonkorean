# ================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================================================
# Copy this file to .env and replace all values with production secrets
# chmod 600 .env
# ================================================================

# ================================================================
# DATABASE CONFIGURATION
# ================================================================

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lemon_korean
POSTGRES_DB=lemon_korean
POSTGRES_USER=lemon_admin
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_HERE

# MongoDB
MONGODB_URI=mongodb://lemon_admin:CHANGE_ME_TO_STRONG_PASSWORD@mongo:27017/lemon_korean?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================

# JWT Configuration
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHARACTER_STRING
JWT_EXPIRES_IN=7d

# ================================================================
# OBJECT STORAGE (MinIO)
# ================================================================

MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=lemon_minio_admin
MINIO_SECRET_KEY=CHANGE_ME_TO_STRONG_PASSWORD
MINIO_BUCKET=lemon-korean-media
MINIO_USE_SSL=false

# ================================================================
# MESSAGE QUEUE (RabbitMQ)
# ================================================================

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=lemon_admin
RABBITMQ_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ================================================================
# SERVICE PORTS
# ================================================================

AUTH_SERVICE_PORT=3001
CONTENT_SERVICE_PORT=3002
PROGRESS_SERVICE_PORT=3003
MEDIA_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
ADMIN_SERVICE_PORT=3006

# ================================================================
# APPLICATION SETTINGS
# ================================================================

# Environment
NODE_ENV=production

# API Configuration
API_BASE_URL=https://api.lemonkorean.com

# CORS Origins (comma-separated)
CORS_ORIGIN=https://lemonkorean.com,https://www.lemonkorean.com

# Logging
LOG_LEVEL=info

# ================================================================
# ADMIN CONFIGURATION
# ================================================================

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@lemonkorean.com

# ================================================================
# BACKUP CONFIGURATION
# ================================================================

BACKUP_DIR=/opt/lemon-korean/backups

# ================================================================
# OPTIONAL: AWS S3 FOR BACKUPS
# ================================================================

# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=lemon-korean-backups
# AWS_REGION=ap-northeast-2

# ================================================================
# OPTIONAL: MONITORING
# ================================================================

# Sentry DSN (error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ================================================================
# OPTIONAL: NOTIFICATIONS
# ================================================================

# Slack Webhook
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Email (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@lemonkorean.com
# SMTP_PASSWORD=your_smtp_password

# ================================================================
# SECURITY NOTES
# ================================================================
# 1. NEVER commit this file with real secrets to git
# 2. Use strong, unique passwords for each service
# 3. Generate JWT_SECRET with: openssl rand -hex 32
# 4. Set file permissions: chmod 600 .env
# 5. Use environment-specific secrets management in cloud
# ================================================================
